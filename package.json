{
    "name": "@glukees/menubar",
    "version": "1.0.0",
    "description": "Libre CGM real-time data, shown in the mac menubar",
    "main": "dist/index.js",
    "repository": "git@github.com:glukees/glukees-menubar.git",
    "author": "keesvanlierop <keesvanlierop@hotmail.com>",
    "license": "MIT",
    "build": {
        "mac": {
            "extendInfo": {
                "LSUIElement": true
            }
        }
    },
    "scripts": {
        "build": "rimraf ./dist && tsc",
        "start": "yarn build && electron ./dist",
        "package": "yarn build && npx electron-packager . --out=out"
    },
    "dependencies": {
        "lodash": "^4.17.21",
        "menubar": "^9.3.0",
        "sharp": "^0.32.6",
        "socket.io-client": "^4.7.2"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.202",
        "electron": "^27.1.2",
        "rimraf": "^5.0.5",
        "typescript": "^5.3.2"
    }
}
